<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Emp_Details_UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Emp_Details_UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdn.materialdesignicons.com/5.4.55/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- jQuery, Popper.js, and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/emp.js"></script>
    <style>
        .navbar-dark-gradient {
            background: linear-gradient(90deg, rgba(34, 34, 34, 1) 0%, rgb(0 0 0 / 43%) 100%);
            color: #fff;
        }

            .navbar-dark-gradient .navbar-nav .nav-link {
                color: #d3d3d3;
            }

                .navbar-dark-gradient .navbar-nav .nav-link:hover {
                    color: #ffffff;
                }

            .navbar-dark-gradient .navbar-brand {
                color: #ffffff;
            }

                .navbar-dark-gradient .navbar-brand:hover {
                    color: #d3d3d3;
                }

            .navbar-dark-gradient .dropdown-menu {
                background: rgb(171 165 165);
                color: #ffffff;
            }

            .navbar-dark-gradient .dropdown-item:hover {
                background: rgb(0 0 0 / 32%);
            }

            .navbar-dark-gradient .form-control {
                background: rgba(34,34,34,1);
                color: #ffffff;
                border: 1px solid rgba(51,51,51,1);
            }

            .navbar-dark-gradient .btn-outline-success {
                color: #ffffff;
                border-color: #ffffff;
            }

                .navbar-dark-gradient .btn-outline-success:hover {
                    background-color: #ffffff;
                    color: #000000;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark navbar-dark-gradient">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Employee Portal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Portal
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item" href="/EmpUI/Index">Employee </a></li>
                                <li><a class="dropdown-item" href="/Home/Privacy">Privacy</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container d-flex flex-column min-vh-100">
        <main role="main" class="flex-grow-1 pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light text-center text-lg-start">
        <div class="text-center p-1 bg-dark text-white">
            &copy; 2024 - All rights reserved.
        </div>
    </footer>

</body>
</html>
